# deploy.yaml
---
- name: "Apache installation avec Docker"
  hosts: prod
  become: true
  vars:
    ansible_sudo_pass: S0l&il
  pre_tasks:
    - name: Install Docker
      apt:
        name: docker.io
        state: present
        update_cache: yes
  tasks:
    - name: Creation container Apache
      community.docker.docker_container:
        name: webapp
        image: httpd
        ports:
          - "80:80"
